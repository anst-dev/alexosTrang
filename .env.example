# ============================================
# Personal Dashboard - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# API BASE URL
# ============================================
# URL cơ sở cho API
VITE_BASE_URL=https://your-domain.ngrok-free.dev

# ============================================
# FEATURE FLAGS
# ============================================
# Bật/tắt các tính năng API

# Bật API cho Quick Note
VITE_ENABLE_QUICK_NOTE_API=true

# Bật API cho Dashboard Logs
VITE_ENABLE_DASHBOARD_LOGS_API=true

# ============================================
# DISABLED APIs - Using localStorage
# ============================================
# Các API này đã bị vô hiệu hóa, ứng dụng sử dụng localStorage cho:
# - Goals (Mục tiêu)
# - Habits (Thói quen)
# - Journal (Nhật ký)
# - Milestones (Nhiệm vụ con)

# Storage Mode - FORCED to true
# Luôn sử dụng localStorage cho goals, habits, journal, milestones
VITE_USE_LOCAL_STORAGE=true
